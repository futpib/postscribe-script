{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "commonjs": true,
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "valid-jsdoc": "error",
    "comma-dangle": ["error", "only-multiline"]
  }
}

